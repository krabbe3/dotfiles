" custom basic setting
set number
set relativenumber
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set cursorline
set hlsearch
set ignorecase
set smartcase
set clipboard=unnamedplus


" Key remapping
inoremap jk <Esc>  " Press 'jk' to exit insert mode
vnoremap jk <Esc>  " Press 'jk' to exit visual mode
